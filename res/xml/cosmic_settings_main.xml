<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:title="@string/cosmic_settings_title" >

        <!-- StatusBar -->
        <Preference

            android:key="cosmic_statusbar_settings"
            android:title="@string/statusbar_settings_title"
            android:fragment="com.cosmic.settings.fragments.StatusBarSettings"
            android:icon="@drawable/ic_cosmic_statusbar" />

        <!-- Recents -->
        <Preference
            android:key="cosmic_recents_settings"
            android:title="@string/recents_settings_title" 
            android:fragment="com.cosmic.settings.fragments.RecentsSettings"
            android:icon="@drawable/ic_cosmic_recents"/>

       <!-- Lockscreen -->
        <Preference
            android:key="cosmic_lockscreen_settings"
            android:title="@string/lockscreen_settings_title"
            android:fragment="com.cosmic.settings.fragments.LockScreenSettings"
            android:icon="@drawable/ic_cosmic_lockscreen"/>

        <!-- Notifications -->
        <Preference
            android:key="cosmic_notifications_settings"
            android:title="@string/notifications_settings_title" 
            android:fragment="com.cosmic.settings.fragments.NotificationsSettings"
            android:icon="@drawable/ic_cosmic_notifications"/>

        <!-- Notification Drawer -->
        <Preference
            android:key="cosmic_notification_drawer_settings"
            android:title="@string/notification_drawer_settings_title"
            android:fragment="com.cosmic.settings.fragments.NotificationDrawerSettings"
            android:icon="@drawable/ic_cosmic_notification_drawer"/>

        <!-- VolumeRocker -->
        <Preference
            android:key="cosmic_volumerocker_settings"
            android:title="@string/volumerocker_settings_title"
            android:fragment="com.cosmic.settings.fragments.VolumeRockerSettings"
            android:icon="@drawable/ic_cosmic_volume" />

        <!-- Misc -->
        <Preference
            android:key="cosmic_misc_settings"
            android:title="@string/misc_settings_title" 
            android:fragment="com.cosmic.settings.fragments.MiscSettings"
            android:icon="@drawable/ic_cosmic_misc"/>

</PreferenceScreen>
